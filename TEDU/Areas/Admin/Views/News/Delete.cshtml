@model TEDU.Areas.Admin.Models.News

<h2>Xóa tin tức</h2>
<p>Bạn có chắc chắn muốn xóa tin tức này không?</p>

<div>
    <strong>Mã tin: </strong> @Model.Id <br />
    <strong>Ngày đăng :</strong> @Model.PublishedDate <br />
</div>

@using (Html.BeginForm("DeleteNewsConfirmed", "News", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a href="@Url.Action("Index", "News")" class="btn btn-secondary">Hủy</a>
}
