@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model TEDU.Areas.Admin.Models.News

@{
    ViewBag.Title = "Update News";
}

@using (Html.BeginForm("Update", "News", FormMethod.Post))
{
    <div class="container">
        <h4>Cập nhật tin tức mới</h4>


        <div class="form-group">
            <label for="Title">Tiêu đề</label>
            <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
        </div>

        <div class="form-group">
            <label for="Content">Nội dung</label>
            <textarea class="form-control" id="Content" name="Content" value="@Model.Content" rows="10"></textarea>
        </div>

        <div class="form-group">
            <input type="hidden" name="PublishedDate" id="PublishedDate" value="@Model.PublishedDate" />
        </div>

        <button type="submit" class="btn btn-primary btn-user btn-block">Cập nhật</button>
        <a href="@Url.Action("Index", "News")" class="btn btn-secondary btn-user btn-block">Quay lại</a>
    </div>
}
<!-- CKEditor Script -->
<script src="~/Areas/Admin/Assets/Plugin/ckeditor/ckeditor.js"></script>
<script>
    CKEDITOR.replace('Content');
    function closeAdd() {
    }
</script>


